<div class="container post-body"  class="main">

	<div class="row">
		<div class="col s12">
			<header>
				<h1  class="center-align" id="blog-post-title">{{data.post.title}}</h1>
				<h5>
					{{{categoryList data.post.categories prefix="Posted in "}}}
					{{#if author.name.first}}by {{author.name.first}}{{/if}}
				</h5>
			</header>
		</div>
	</div>
		<div class="row">
			<div class="col m1 hide-on-small-only"></div>
			<div class="col s12 m10">
				<div class="post">
					{{{categoryList data.post.categories prefix="Posted in "}}}
					{{#if post.image}}<img src="{{{cloudinaryUrl data.post.image width=750 height=450 crop='fit' }}}" class="img-responsive">{{/if}}
					{{{data.post.content.extended}}}
				</div>
			</div>
			<div class="col m1 hide-on-small-only"></div>
		</div>
		<div class="row">
			<div class="col s12">
				<p class="center-align"><a class="links" href="/blog">&larr; back to the blog</a></p>
			</div>
		</div>
</div>
